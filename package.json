{
  "name": "area51-telegram-bot",
  "version": "1.0.0",
  "description": "Area51 - Telegram Trading Bot for Monad Testnet",
  "main": "src/index-modular-simple.js",
  "scripts": {
    "start": "node src/index-modular-simple.js",
    "dev": "nodemon src/index-modular-simple.js",
    "test": "jest --passWithNoTests",
    "migrate": "node src/database/migrate.js",
    "backup": "node src/backup/backup.js",
    "monitoring:start": "docker-compose -f docker/docker-compose.monitoring.yml up -d",
    "monitoring:full": "docker-compose -f docker/docker-compose.monitoring.yml --profile full up -d",
    "monitoring:stop": "docker-compose -f docker/docker-compose.monitoring.yml down",
    "monitoring:logs": "docker-compose -f docker/docker-compose.monitoring.yml logs -f",
    "health": "curl http://localhost:3001/health || echo 'Health check failed'",
    "redis:start": "node scripts/setup-redis-cluster-dev.js start",
    "redis:stop": "node scripts/setup-redis-cluster-dev.js stop",
    "redis:status": "node scripts/setup-redis-cluster-dev.js status",
    "redis:cleanup": "node scripts/setup-redis-cluster-dev.js cleanup",
    "cluster:dev": "npm run redis:start",
    "test:cache": "node scripts/test-enhanced-cache.js",
    "test:integration": "node scripts/test-bot-integration.js",
    "cache:performance": "node scripts/test-enhanced-cache.js"
  },
  "keywords": [
    "telegram",
    "bot",
    "trading",
    "monad",
    "defi"
  ],
  "author": "Area51 Team",
  "license": "MIT",
  "dependencies": {
    "abort-controller": "^3.0.0",
    "axios": "^1.6.2",
    "bip39": "^3.1.0",
    "cluster": "^0.7.7",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "express": "^4.21.2",
    "ioredis": "^5.7.0",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "redis": "^5.8.2",
    "telegraf": "^4.15.6",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}