{
  "name": "area51-telegram-bot",
  "version": "1.0.0",
  "description": "Area51 - Telegram Trading Bot for Monad Testnet",
  "main": "src/index-modular-simple.js",
  "scripts": {
    "start": "node src/index-modular-simple.js",
    "start:512mb": "node --max-old-space-size=512 src/index-modular-simple.js",
    "start:1gb": "node --max-old-space-size=1024 src/index-modular-simple.js",
    "start:2gb": "node --max-old-space-size=2048 src/index-modular-simple.js",
    "dev": "nodemon src/index-modular-simple.js",
    "dev:512mb": "nodemon --exec 'node --max-old-space-size=512' src/index-modular-simple.js",
    "test": "jest --passWithNoTests",
    "test:syntax": "find src -name '*.js' -exec node -c {} \\;",
    "health": "curl ${HEALTH_URL:-http://localhost:80/health} || echo 'Health check failed'",
    "security:check": "node scripts/security-check.js",
    "deploy:health": "node -e \"const url = process.env.HEALTH_URL || 'http://localhost:80/health'; require('http').get(url, (res) => { console.log('Health Status:', res.statusCode); process.exit(res.statusCode === 200 ? 0 : 1) }).on('error', (e) => { console.error('Health check failed:', e.message); process.exit(1) })\"",
    "deploy:verify": "npm run deploy:health && echo 'Deployment verification successful'",
    "coolify:start": "node src/index-modular-simple.js"
  },
  "keywords": [
    "telegram",
    "bot",
    "trading",
    "monad",
    "defi"
  ],
  "author": "Area51 Team",
  "license": "MIT",
  "overrides": {
    "punycode": "^2.3.0"
  },
  "dependencies": {
    "abort-controller": "^3.0.0",
    "axios": "^1.6.2",
    "bip39": "^3.1.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "express": "^4.21.2",
    "ioredis": "^5.7.0",
    "node-cron": "^3.0.3",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "redis": "^5.8.2",
    "telegraf": "^4.15.6",
    "winston": "^3.18.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}