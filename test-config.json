  "testTokens": {
    "valid": [
      {
        "symbol": "USDC",
        "address": "0x1234567890123456789012345678901234567890",
        "expectedPrice": 1.0
      },
      {
        "symbol": "WETH", 
        "address": "0x0987654321098765432109876543210987654321",
        "expectedPrice": 2000.0
      }
    ],
    "invalid": [
      {
        "symbol": "FAKE",
        "address": "0x0000000000000000000000000000000000000000"
      }
    ]
  },
  "testScenarios": [
    {
      "name": "Contract Address Recognition",
      "type": "token_recognition",
      "input": "0x1234567890123456789012345678901234567890",
      "expectedResponse": "token_info_display",
      "shouldHaveButtons": true
    },
    {
      "name": "Token Symbol in Text",
      "type": "token_recognition", 
      "input": "What do you think about USDC?",
      "expectedResponse": "token_info_display",
      "shouldHaveButtons": true
    },
    {
      "name": "Buy Command - Valid",
      "type": "buy_command",
      "input": "@{botUsername} buy USDC 100",
      "expectedResponse": "buy_processing",
      "requiresWallet": true
    },
    {
      "name": "Buy Command - No Amount",
      "type": "buy_command",
      "input": "@{botUsername} buy USDC",
      "expectedResponse": "error_invalid_format",
      "requiresWallet": false
    },
    {
      "name": "Help Command",
      "type": "help_command",
      "input": "@{botUsername} help",
      "expectedResponse": "help_message",
      "requiresWallet": false
    },
    {
      "name": "Normal Message - Should Ignore",
      "type": "ignore_test",
      "input": "Hello everyone! How are you?",
      "expectedResponse": "no_response",
      "requiresWallet": false
    },
    {
      "name": "Private Chat - Should Ignore",
      "type": "ignore_test",
      "input": "0x1234567890123456789012345678901234567890",
      "chatType": "private",
      "expectedResponse": "no_response",
      "requiresWallet": false
    }
  ],
  "monitoring": {
    "logLevel": "debug",
    "trackMetrics": true,
    "alertOnErrors": true,
    "maxResponseTime": 5000
  },
  "validation": {
    "checkDatabaseConnection": true,
    "checkMonorailAPI": true,
    "checkWalletService": true,
    "checkCacheService": true
  }
}