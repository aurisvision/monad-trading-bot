{
  "name": "Monad Data API Configuration",
  "version": "1.0.0",
  "description": "Configuration for Monad network data API endpoints",
  "baseUrl": "https://api.monad.xyz",
  "endpoints": {
    "network": {
      "status": "/v1/network/status",
      "info": "/v1/network/info",
      "validators": "/v1/network/validators",
      "blocks": "/v1/blocks",
      "transactions": "/v1/transactions"
    },
    "tokens": {
      "list": "/v1/tokens",
      "details": "/v1/tokens/{address}",
      "price": "/v1/tokens/{address}/price",
      "metadata": "/v1/tokens/{address}/metadata"
    },
    "accounts": {
      "balance": "/v1/accounts/{address}/balance",
      "transactions": "/v1/accounts/{address}/transactions",
      "tokens": "/v1/accounts/{address}/tokens"
    },
    "defi": {
      "pools": "/v1/defi/pools",
      "liquidity": "/v1/defi/liquidity",
      "swaps": "/v1/defi/swaps",
      "yields": "/v1/defi/yields"
    }
  },
  "authentication": {
    "type": "api_key",
    "header": "X-API-Key",
    "required": true
  },
  "rateLimit": {
    "requests": 1000,
    "window": "1h",
    "burst": 100
  },
  "timeout": {
    "connect": 5000,
    "read": 30000
  },
  "retryPolicy": {
    "maxRetries": 3,
    "backoffMultiplier": 2,
    "initialDelay": 1000
  },
  "cache": {
    "enabled": true,
    "ttl": 300,
    "maxSize": 1000
  },
  "monitoring": {
    "healthCheck": "/health",
    "metrics": "/metrics",
    "logs": true
  }
}