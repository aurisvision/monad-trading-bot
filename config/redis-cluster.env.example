# Redis Cluster Configuration for Area51 Trading Bot
# Copy this file to .env.cluster for development

# ============================================================================
# REDIS CLUSTER SETTINGS
# ============================================================================

# Enable Redis Cluster Mode (true/false)
REDIS_CLUSTER_ENABLED=true

# Master Instance (Primary writes and critical data)
REDIS_MASTER_HOST=localhost
REDIS_MASTER_PORT=6379
REDIS_MASTER_PASSWORD=

# Replica Instance (Read operations and backup)
REDIS_REPLICA_HOST=localhost
REDIS_REPLICA_PORT=6380
REDIS_REPLICA_PASSWORD=

# Cache Instance (High-frequency temporary data)
REDIS_CACHE_HOST=localhost
REDIS_CACHE_PORT=6381
REDIS_CACHE_PASSWORD=

# Cluster Operation Modes
REDIS_WRITE_MODE=mirror    # mirror, master-only, smart
REDIS_READ_MODE=smart      # smart, replica-first, master-only

# Connection Settings
REDIS_CONNECTION_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=3000
REDIS_RETRY_DELAY=100

# ============================================================================
# LEGACY REDIS SETTINGS (Fallback)
# ============================================================================

# Single Redis Instance (used when cluster is disabled)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# PERFORMANCE TUNING
# ============================================================================

# Cache TTL Overrides (in seconds)
CACHE_TTL_USER_SETTINGS=0           # Permanent
CACHE_TTL_WALLET_BALANCE=120        # 2 minutes
CACHE_TTL_PORTFOLIO=300             # 5 minutes
CACHE_TTL_TOKEN_INFO=900            # 15 minutes
CACHE_TTL_MON_PRICE=3600            # 1 hour

# Performance Monitoring
CACHE_PERFORMANCE_MONITORING=true
CACHE_PERFORMANCE_INTERVAL=60000    # 1 minute

# Health Check Settings
CACHE_HEALTH_CHECK_INTERVAL=30000   # 30 seconds
CACHE_ENABLE_FALLBACK=true

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Development Mode Features
NODE_ENV=development
DEBUG_CACHE=false
DEBUG_CLUSTER=false

# Logging Levels
LOG_LEVEL=info
CACHE_LOG_LEVEL=info
